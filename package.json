{
  "name": "test-project",
  "version": "1.0.0",
  "description": "a dummy project to test git versioning",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ronyonka/test-project.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ronyonka/test-project/issues"
  },
  "homepage": "https://github.com/Ronyonka/test-project#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "husky": "^2.4.1",
    "standard-version": "^6.0.1"
  }
}
